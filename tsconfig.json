{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "playwright.config.js",
    "components/organisms/SwapModule/index.js",
    "components/atoms/Button/index.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": ".",
  "paths": {
    "@/atoms/*": [
      "components/atoms/*"
    ],
    "@/molecules/*": [
      "components/molecules/*"
    ],
    "@/organisms/*": [
      "components/organisms/*"
    ],
    "@/templates/*": [
      "components/templates/*"
    ],
    "@/pages/*": [
      "components/pages/*"
    ]
  }
}